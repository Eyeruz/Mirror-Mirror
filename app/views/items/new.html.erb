<h3>Add New Item</h3>

<%= form_for @item do |f| %>
    <div class="left">
    </div>
    <br>
    
    <table class="striped centered #8d6e63 brown-text text-darken-1">

            <thead>
              <tr>
                  <th>Item Name:</th>
                  <th>Item Price: </th>
                  <th>Item Color:</th>
                  <th>Item Size:</th>
                  <th>Item Quantity:</th>

              </tr>
            </thead>
    
            <tbody>
              <tr>
                <td> <%= f.text_field :name %><br></td>
                <td>$ <%= f.number_field :price %></td>
                <td><%= f.select :color, options_for_select(["Black", "White", "Green"]) %></td>
                <td><%= f.select :size, options_for_select(["Small", "Medium"]) %></td>
                 <td><%= f.number_field :quantity %> </td>
              </tr>
              </tbody>
         
      
         </table>
        <%= f.submit %>
        <% end %>
 