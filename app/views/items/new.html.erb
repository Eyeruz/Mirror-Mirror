<h3>Add New Item</h3>

<%= form_for([@category, @item]) do |f| %>
    <div class="left">
    </div>
    <br>
    
    <table class="striped centered #8d6e63 brown-text text-darken-1">

            <thead>
              <tr>
                  <th>Item Name:</th>
                  <th>Item Price: </th>
                  <th>Item Color:</th>
                  <th>Item Size:</th>
                  <th>Item Quantity:</th>
                  <th>Item Category:</th>


              </tr>
            </thead>
            <tbody>
              <tr>
                <td> <%= f.text_field :name %><br></td>
                <td>$ <%= f.number_field :price %></td>
                <td><%= f.select :color, options_for_select(["Black", "White", "Green"]) %></td>
                <td><%= f.select :size, options_for_select(["Small", "Medium","Large"]) %></td>
                <td><input type="number" max="10" min="0" name="customer[items][][quantity]" id="<%= @item.id %>" value="0"></td>
                <td> <%= f.collection_select  :category_ids, Category.all, :id, :name %><br></td>


              </tr>
              </tbody>
             </table>
         <%= f.hidden_field :creator_id, value: session[:user_id] %> 
        <%= f.submit %>
 

        <% end %>
        