<h1> Items Index </h1>

<%= form_tag customer_items_path, method: "post" do %>
    <div class="left">
    </div>
    <br>
    
    <table class="striped centered #8d6e63 brown-text text-darken-1">
    <% @items.each do |item| %>
            <thead>
              <tr>
                  <th>Item Name:</th>
                  <th>Item Price: </th>
                  <th>Item Color:</th>
                  <th>Item Size:</th>
                  <th>Item Quantity:</th>
                  <th> Item Category: </th>

              </tr>
            </thead>
            <% category = item.categories.map {|c| c.name }.join(" ") %>
            <% category_id = item.categories.map {|c| c.id }.join(" ") %>

            <tbody>
              <tr>
                <td><%= link_to item.name, category_item_path(category_id, item.id) %></td>
                <td>$<%= item.price %></td>
                <td><%= item.color %></td>
                <td><%= item.size %></td>
                 <td><input type="number" max="10" min="0" name="customer[items][][quantity]" id="<%= item.id %>" value="0"></td>
                 <td><%= category %></td>
                <td> <%= link_to 'Edit', edit_category_item_path(category_id, item.id) %></td>
              </tr>
              </tbody>
         
          <input type="hidden" name="customer[items][][item_id]" value="<%= item.id %>">	
          <input type="hidden" name="customer[items][][item_price]" value="<%= item.price %>">
      
         <% end %>
         </table>
        <%= submit_tag "Submit Item" %>
         <% end %>
         