<h4> Your Bag </h4>


   
<% price = 0 %>
<% quantity = 0 %>

<table class="striped #000000 black-text text-darken-1">

<% @items.map do |item| %>
  <thead>
  <tr>
<th> Item Name: </th>
<th> Item Price: </th>
<th> Item Size: </th>
<th> Item Color: </th>
<th> Item Quantity: </th>
</tr>
</thead>

<tbody>
<tr>

<td><button class="card-panel #616161 grey darken-2 #616161 grey darken-2"><%= link_to item.item.name, edit_customer_item_path(item)%></button></td>
<td> $<%= item.item.price %> </td>
<td> <%= item.item.size %> </td>
<td> <%= item.item.color %> </td>
<td> <%= item.quantity %> </td>

<% price += item.item.price * item.quantity %> 


 <% end %>

</tr>
</tbody>
</table>

<h3 class=" #000000 black-text text-darken-1"> <b> Your Total $<%= price %> <b> </h3>
    
<b><a class="waves-effect waves-white btn-flat #424242 grey darken-3 #ffffff white-text" style="float: right;" href="/checkout">checkout</a></b>
